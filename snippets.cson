				'''

	# Enable WP_DEBUG.
	'Enable WP_DEBUG':
		'prefix': 'wpdebug'
		'body': '''
				define( 'WP_DEBUG', true );
				if ( WP_DEBUG ) {
					define( 'JETPACK_DEV_DEBUG', true );
